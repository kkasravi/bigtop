set -ex

java -XX:+CMSClassUnloadingEnabled -XX:PermSize=256M -XX:MaxPermSize=512M -Divy.home=${HOME}/.ivy2 -Dsbt.ivy.home=${HOME}/.ivy2 -Dsbt.boot.directory=${HOME}/.sbt/boot/ -Duser.home=${HOME} -Drepo.maven.org=$IVY_MIRROR_PROP -Dreactor.repo=file://${HOME}/.m2/repository -Dbuild.number="$BUILD_NUMBER" -jar ./lib/sbt-launch.jar "++2.9.2 package"
java -XX:+CMSClassUnloadingEnabled -XX:PermSize=256M -XX:MaxPermSize=512M -Divy.home=${HOME}/.ivy2 -Dsbt.ivy.home=${HOME}/.ivy2 -Dsbt.boot.directory=${HOME}/.sbt/boot/ -Duser.home=${HOME} -Drepo.maven.org=$IVY_MIRROR_PROP -Dreactor.repo=file://${HOME}/.m2/repository -Dbuild.number="$BUILD_NUMBER" -jar ./lib/sbt-launch.jar "++2.9.2 assembly-package-dependency"
